generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// Types of interest rate intervals for debt repayment
enum InterestRateType {
  MONTHLY      // Monthly payment
  YEARLY       // Yearly payment
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String   // Hashed password
  image     String?  // Optional profile image
  debts     Debt[]   // List of debts linked to this user
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Debt {
  id                String           @id @default(uuid())
  name              String           // Name/label of the debt
  type              String           // Type of debt (e.g., credit card, loan)
  principal         Float            // Original loan amount (principal)
  interestRate      Float            // Interest rate in percentage (e.g., 5.5 = 5.5%)
  interestRateType  InterestRateType // Type of interest rate interval
  currency          String           // Currency (e.g., "THB", "USD")
  termMonths        Int              // Total duration in months
  firstPaymentDate  DateTime         // When repayment starts
  note              String?          // Optional note or remark
  userId            String
  user              User             @relation(fields: [userId], references: [id])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}
